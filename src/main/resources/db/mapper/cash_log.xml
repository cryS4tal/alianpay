<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ylli.api.wallet.mapper.CashLogMapper">
    <resultMap id="cashMap" type="com.ylli.api.wallet.model.CashLog"/>
    <select id="cashList" resultMap="cashMap" >
        SELECT t_cash_log.* FROM t_cash_log LEFT JOIN t_phone_auth ON t_cash_log.mch_id = t_phone_auth.id
        <where>
            <if test="mch_id != null">
                mch_id = ${mch_id}
            </if>
            <if test="phone != null">
                phone = #{phone}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

    <select id="selectCashMoney" resultType="java.lang.Long" >
        SELECT sum(money) FROM t_cash_log
        <where>
            state = 1
            <if test="mch_id != null">
                AND mch_id = ${mch_id}
            </if>
        </where>
    </select>
</mapper>